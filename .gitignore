apps/*/*/*.layout
apps/*/*/*.depend
apps/*/*/bin/clickToLaunch*
apps/*/*/bin/libs
apps/*/*/obj

# Visual Studio files
*.dll
*.lib
*.exe
*.sdf
*.opensdf
*.exp
*.suo
*.ilk
*.pdb

# Intellisense
ipch/

# Mac files
.DS_Store

